<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Credentials</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

  </head>
  <body>
    <div class="container p-4">
   
      <div class="row">
        {{#each credentials}}
          <div class="col-xl-3">
            
              <div class="card text-center border-primary mt-4">
                <div class="card-header">
                  <h4 class="h4">Titular
                    <h3 class="card-title text-uppercase h5">
                      {{fullname}}
                    </h3>
                  </h4>
                </div>
                <div class="card-body">
                  <h5 class="card-header h4">Relative</h5>
                  <form action="/updateRelatives/{{relativeid}}/{{id}}" method="POST">
                      <div class="form-group">
                        <strong>Name:</strong> <input name = "Name" value= "{{name}}" class=" form-control form-control-sm m-2 text-center"/> 
                      </div>
                      <div class="form-group">
                        <strong>Lastname:</strong> <input name = "Lastname" value= "{{lastname}}" class=" form-control form-control-sm m-2 text-center"/>    
                      </div>
                      <div class="form-group">
                          <strong>Dni:</strong> <input name = "Dni" value= "{{dni}}" class="form-control form-control-sm m-2 text-center"/> 
                      </div>
                      <div class="form-group">
                        <strong>Parentezco: </strong><input name = "Relationship" value= "{{relationship}}" class="form-control form-control-sm m-2 text-center"/> 
                      </div> 
                      <div class="row">
                        <div class="col col-md-12">
                          <div class="form-group">
                            <button class="btn  btn-success btn-block mb-2"> 
                                Save
                            </button>
                          </div>
                        <a class="btn btn-danger btn-block" href="/deleteRelatives/{{relativeid}}/{{id}}"> 
                            Remove
                        </a>
                  </form>

                    </div>
                  </div>
                  <div class="card-footer">
                    <p class="text-muted">
                      Ingresado
                      "{{created_at}}"
                    </p>
                  </div>

                </div>
              </div>
            
          </div>
        {{else}}
          <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
              <p>There are not relatives saved yet.</p>
              <a href="/links/add">Create One!</a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  </body>
</html>